#!/bin/bash

if [ $# -gt 0 ]
then
    for ((i = 1; i <= $#; ++i))
    do
        git add "${!i}"
    done
    echo -n "Commit message: "
    read commit_message
    if [ $"#$commit_message" = 0]
    then
        git commit -m "[fix] coding style"
    else
        git commit -m "$commit_message"
    fi
    git push
else
    end=0
    while((end == 0))
    do
        echo "Are you sure you want push everything ? (y/n)"
        read answer
        if [ "$answer" = "y" ]
        then
            git add .
            read -p 'Commit message: ' commit_message
            if [ $"#$commit_message" = 0]
            then
                git commit -m "[fix] coding style"
            else
                git commit -m "$commit_message"
            fi
            git push
            end=1
        elif [ "$answer" = "n" ]
        then
            end=1
        fi
    done
fi
